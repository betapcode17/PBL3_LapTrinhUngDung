@{
    ViewData["Title"] = "Footer";
}

<!-- Footer -->
<footer class="ftco-footer ftco-section">
    <div class="overlay"></div>
    <div class="container">
        <div class="row mb-5">
            <!-- About Us -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">Về chúng tôi</h2>
                    <p class="text-muted">
                        Dự án Website tổ chức phi lợi nhuận nhằm mục đích học tập, cung cấp thông tin về các hoạt động từ thiện, giúp mọi người dễ dàng tham gia, đóng góp và theo dõi tác động của những hành động ý nghĩa.
                    </p>
                   
                </div>
            </div>

            <!-- Recent News -->
            <div class="col-md-4 col-lg-4 mb-4">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">Tin tức gần đây</h2>
                    @if (ViewBag.RecentNews != null)
                    {
                        foreach (var news in ViewBag.RecentNews)
                        {
                            <div class="block-21 mb-3 d-flex">
                                <a class="blog-img mr-3" style="background-image: url('@news.ImageUrl');"></a>
                                <div class="text">
                                    <h3 class="heading">
                                        <a href="@news.Link">@news.Title</a>
                                    </h3>
                                    <div class="meta text-muted">
                                        <div>
                                            <a href="#"><i class="fa-solid fa-calendar"></i> @news.Date.ToString("MMM dd, yyyy")</a>
                                        </div>
                                        <div>
                                            <a href="#"><i class="fa-solid fa-user"></i> @news.Author</a>
                                        </div>
                                        <div>
                                            <a href="#"><i class="fa-solid fa-comment"></i> @news.Comments</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Hiện chưa có tin tức nào.</p>
                    }
                </div>
            </div>

            <!-- Links -->
            <div class="col-md-4 col-lg-2 mb-4">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">Liên kết</h2>
                    <ul class="list-unstyled">
                        <li><a href="/" class="py-2 d-block">Trang chủ</a></li>
                        <li><a href="/Events" class="py-2 d-block">Sự kiện</a></li>
                        <li><a href="/Fundraising" class="py-2 d-block">Gây quỹ</a></li>
                        <li><a href="/Volunteers" class="py-2 d-block">Tình nguyện viên</a></li>
                        <li><a href="/News" class="py-2 d-block">Tin tức</a></li>
                        <li><a href="/About" class="py-2 d-block">Về chúng tôi</a></li>
                    </ul>
                </div>
            </div>

            <!-- Contact Us -->
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">Liên hệ</h2>
                    <div class="block-23">
                        <ul class="contact-list list-unstyled">
                            <li class="d-flex align-items-start mb-3">
                                <i class="fa-solid fa-location-dot me-3 mt-1"></i>
                                <span class="text">Đại học Bách Khoa, Đại học Đà Nẵng</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <a href="tel:+23923929210">
                                    <i class="fa-solid fa-phone me-3"></i>
                                    <span class="text">+2 392 3929 210</span>
                                </a>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <a href="mailto:info@yourdomain.com">
                                    <i class="fa-solid fa-envelope me-3"></i>
                                    <span class="text">info@yourdomain.com</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year - Dự án từ thiện phi lợi nhuận</p>
            </div>
        </div>
    </div>
</footer>

<!-- Loader -->
<div id="ftco-loader" class="fullscreen">
    <div class="spinner">
        <svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" />
        </svg>
    </div>
</div>